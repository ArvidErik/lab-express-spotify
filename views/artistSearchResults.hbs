<h1 class="mx-auto p-2" style="width: 200px;">Artists</h1>
<div class="d-flex flex-wrap justify-content-center">
    {{#each artists.items}}
    <div class="card m-2 d-inline-flex" style="width: 15rem;">
        <img src="{{images.2.url}}" class="card-img-top" alt="...">
        <div class="card-body d-flex flex-column justify-content-center align-items-center text-center">
            <h5 class="card-title">{{name}}</h5>
            <a href="/albums/{{id}}" class="btn btn-primary">View albums</a>
        </div>
    </div>
    {{/each}}
</div>





